<?xml version="1.0"?>
<robot name="ackermann_logistic_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Where meshes are (URIs from SDF "model://" mapped to package path) -->
  <xacro:property name="mesh_dir" value="$(find alphabot_description)/meshes"/>

  <!-- ========== Base & Chassis (as in SDF) ========== -->
  <link name="base_link"/>

  <joint name="chassis_link_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child  link="chassis_link"/>
  </joint>

  <link name="chassis_link">
    <inertial>
      <origin xyz="1e-06 0.07307 0.65096" rpy="0 0 0"/>
      <mass value="1580"/>
      <inertia ixx="1997.86" ixy="-3e-05" ixz="-1e-06" iyy="442.769" iyz="62.5206" izz="2238.05"/>
    </inertial>

    <!-- visual == mesh (scale 0.5) -->
    <visual name="chassis_link_visual">
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}/chassis.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>

    <!-- collision == mesh (scale 0.5), like SDF -->
    <collision name="chassis_link_collision">
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}/chassis.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </collision>
  </link>

  <!-- ========== Rear Wheels (revolute in SDF; URDF: continuous, no limits) ========== -->
  <joint name="bl_axle" type="continuous">
    <origin xyz="-0.18 -0.244 0.0" rpy="0 0 0"/>
    <parent link="chassis_link"/>
    <child  link="bl_1"/>
    <axis xyz="-1 0 0"/>
    <dynamics friction="12.031606150200002"/>
  </joint>

  <link name="bl_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="24.5"/>
      <inertia ixx="1.84514" ixy="0" ixz="0" iyy="1.04961" iyz="0" izz="1.04961"/>
    </inertial>
    <!-- collision == cylinder (pose same as SDF collision) -->
    <collision name="bl_1_collision">
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.072" length="0.06"/></geometry>
    </collision>
    <!-- visual == mesh wheel (scale 0.5), so it shows up -->
    <visual name="bl_1_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
  </link>

  <joint name="br_axle" type="continuous">
    <origin xyz="0.18 -0.244 0.0" rpy="0 0 0"/>
    <parent link="chassis_link"/>
    <child  link="br_1"/>
    <axis xyz="-1 0 0"/>
    <dynamics friction="12.031606150200002"/>
  </joint>

  <link name="br_1">
    <inertial>
      <origin xyz="-0.0377 0 0" rpy="0 0 0"/>
      <mass value="24.5"/>
      <inertia ixx="1.84514" ixy="0" ixz="0" iyy="1.04961" iyz="0" izz="1.04961"/>
    </inertial>
    <collision name="br_1_collision">
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.072" length="0.06"/></geometry>
    </collision>
    <visual name="br_1_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
  </link>

  <!-- ========== Steering Knuckles (revolute with limits, as SDF) ========== -->
  <joint name="l_steer" type="revolute">
    <origin xyz="-0.236 0.244 0.0" rpy="0 0 0"/>
    <parent link="chassis_link"/>
    <child  link="l_steer_1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.95" upper="0.95" effort="1e9" velocity="1e9"/>
    <dynamics friction="18.0474092253"/>
  </joint>

  <link name="l_steer_1">
    <inertial>
      <origin xyz="0.003381 0 0.02162" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <joint name="r_steer" type="revolute">
    <origin xyz="0.236 0.244 0.0" rpy="0 0 0"/>
    <parent link="chassis_link"/>
    <child  link="r_steer_1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.95" upper="0.95" effort="1e9" velocity="1e9"/>
    <dynamics damping="0.01" friction="18.0474092253"/>
  </joint>

  <link name="r_steer_1">
    <inertial>
      <origin xyz="0.003381 0 0.02162" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <!-- ========== Front Wheels (continuous) ========== -->
  <joint name="fl_axle" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="l_steer_1"/>
    <child  link="fl_1"/>
    <axis xyz="-1 0 0"/>
    <dynamics friction="12.031606150200002"/>
  </joint>

  <link name="fl_1">
    <inertial>
      <origin xyz="-0.0377 0 0" rpy="0 0 0"/>
      <mass value="24.5"/>
      <inertia ixx="1.84514" ixy="0" ixz="0" iyy="1.04961" iyz="0" izz="1.04961"/>
    </inertial>
    <collision name="fl_1_collision">
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.072" length="0.06"/></geometry>
    </collision>
    <visual name="fl_1_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
  </link>

  <joint name="fr_axle" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="r_steer_1"/>
    <child  link="fr_1"/>
    <axis xyz="-1 0 0"/>
    <dynamics friction="12.031606150200002"/>
  </joint>

  <link name="fr_1">
    <inertial>
      <origin xyz="-0.0377 0 0" rpy="0 0 0"/>
      <mass value="24.5"/>
      <inertia ixx="1.84514" ixy="0" ixz="0" iyy="1.04961" iyz="0" izz="1.04961"/>
    </inertial>
    <collision name="fr_1_collision">
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.072" length="0.06"/></geometry>
    </collision>
    <visual name="fr_1_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
  </link>

  <!-- ========== Lift (prismatic, limits as SDF) ========== -->
  <link name="lift_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${mesh_dir}/platform.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.2805 0.2 0.03"/>
      </geometry>
    </collision>
  </link>

  <joint name="lift_fixed_joint" type="fixed">
    <origin xyz="0 0 0.20" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="lift_link"/>
  </joint>

  <!-- ========== Gazebo Classic extensions (from your SDF surfaces) ========== -->

  <!-- Chassis friction + self-collide -->
  <gazebo reference="chassis_link">
    <selfCollide>true</selfCollide>
    <mu1>0.2</mu1>
    <mu2>0.2</mu2>
  </gazebo>

  <!-- Wheel high friction -->
  <gazebo reference="bl_1"><mu1>1000000</mu1><mu2>1000000</mu2></gazebo>
  <gazebo reference="br_1"><mu1>1000000</mu1><mu2>1000000</mu2></gazebo>
  <gazebo reference="fl_1"><mu1>1000000</mu1><mu2>1000000</mu2></gazebo>
  <gazebo reference="fr_1"><mu1>1000000</mu1><mu2>1000000</mu2></gazebo>

  <!-- Lift contact/friction intents -->
  <gazebo reference="lift_link">
    <mu1>1000000</mu1>
    <mu2>100000</mu2>
    <kp>1e5</kp>
    <kd>1</kd>
    <maxVel>0.01</maxVel>
    <minDepth>0.001</minDepth>
  </gazebo>

  <!-- ========== Ackermann Drive Plugin (exactly as in your SDF) ========== -->
  <gazebo>
    <plugin name="ackermann_drive" filename="libgazebo_ros_ackermann_drive.so">
      <ros>
        <remapping>cmd_vel:=/amazon_robot/cmd_vel</remapping>
        <remapping>odom:=/amazon_robot/odom</remapping>
        <remapping>distance:=distance</remapping>
      </ros>

      <update_rate>100.0</update_rate>

      <front_left_joint>fl_axle</front_left_joint>
      <front_right_joint>fr_axle</front_right_joint>
      <rear_left_joint>bl_axle</rear_left_joint>
      <rear_right_joint>br_axle</rear_right_joint>
      <left_steering_joint>l_steer</left_steering_joint>
      <right_steering_joint>r_steer</right_steering_joint>

      <max_steer>0.52</max_steer>
      <max_steering_angle>0.64</max_steering_angle>
      <max_speed>50</max_speed>

      <left_steering_pid_gain>1500 900 450</left_steering_pid_gain>
      <left_steering_i_range>0 0</left_steering_i_range>
      <right_steering_pid_gain>1500 900 450</right_steering_pid_gain>
      <right_steering_i_range>0 0</right_steering_i_range>
      <linear_velocity_pid_gain>1000 100 10</linear_velocity_pid_gain>
      <linear_velocity_i_range>0 0</linear_velocity_i_range>

      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
      <publish_distance>true</publish_distance>

      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>chassis_link</robot_base_frame>
    </plugin>
  </gazebo>

</robot>
