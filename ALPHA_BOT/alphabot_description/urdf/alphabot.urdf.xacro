<?xml version="1.0"?>
<robot name="alphabot" xmlns:xacro="http://www.ros.org/wiki/xacro">


  <xacro:arg name="scan_topic" default="/scan"/>
  <xacro:arg name="cmd_vel_topic" default="/amazon_robot/cmd_vel"/>
  <xacro:arg name="odom_topic" default="/amazon_robot/odom"/>
  <xacro:arg name="use_gazebo_camera" default="true"/>


  <link name="base_footprint"/>
  <link name="link_base"/>
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child  link="link_base"/>
    <origin xyz="0 0 0.072" rpy="0 0 0"/>
  </joint>

  <link name="chassis_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 1.57"/>
      <mass value="1580"/>
      <inertia ixx="1997.86" ixy="0" ixz="0" iyy="442.769" iyz="62.5206" izz="2238.05"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 1.57"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/chassy.dae" scale="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 1.57"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/chassy.dae" scale="1 1 1"/>
      </geometry>
    </collision>
  </link>

  <joint name="chassis_link_joint" type="fixed">
    <parent link="link_base"/>
    <child  link="chassis_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ================= WHEELS (6 TOTAL, rotated Z) ================= -->
  <!-- Front Left Trolley -->
  <link name="front_left_wheel">
    <collision><origin xyz="0 0 0" rpy="1.57 0 1.5708"/><geometry><sphere radius="0.0523"/></geometry></collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.000144" iyy="0.000144" izz="0.000144"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>
  <joint name="front_left_wheel_joint" type="fixed">
    <parent link="chassis_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.40 0.27 -0.02" rpy="0 0 0"/>
  </joint>

  <!-- Front Right Trolley -->
  <link name="front_right_wheel">
    <collision><origin xyz="0 0 0" rpy="1.57 0 1.5708"/><geometry><sphere radius="0.0523"/></geometry></collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.000144" iyy="0.000144" izz="0.000144"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>
  <joint name="front_right_wheel_joint" type="fixed">
    <parent link="chassis_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.40 -0.27 -0.02" rpy="0 0 0"/>
  </joint>

  <!-- Back Left Trolley -->
  <link name="back_left_wheel">
    <collision><origin xyz="0 0 0" rpy="1.57 0 1.5708"/><geometry><sphere radius="0.0523"/></geometry></collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.000144" iyy="0.000144" izz="0.000144"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>
  <joint name="back_left_wheel_joint" type="fixed">
    <parent link="chassis_link"/>
    <child link="back_left_wheel"/>
    <origin xyz="-0.40 0.27 -0.02" rpy="0 0 0"/>
  </joint>

  <!-- Back Right Trolley -->
  <link name="back_right_wheel">
    <collision><origin xyz="0 0 0" rpy="1.57 0 1.5708"/><geometry><sphere radius="0.0523"/></geometry></collision>
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.000144" iyy="0.000144" izz="0.000144"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>
  <joint name="back_right_wheel_joint" type="fixed">
    <parent link="chassis_link"/>
    <child link="back_right_wheel"/>
    <origin xyz="-0.40 -0.27 -0.02" rpy="0 0 0"/>
  </joint>

  <!-- Middle Left Traction -->
  <link name="middle_left_wheel">
    <collision><origin xyz="0 0 0" rpy="1.57 0 1.5708"/>
    <geometry><cylinder radius="0.0735" length="0.03"/></geometry></collision>
        <!-- <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual> -->
    <inertial>
      <origin xyz="0 0 0" rpy="-1.57 0 1.5708"/>
      <mass value="1"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>
  <joint name="middle_left_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="middle_left_wheel"/>
    <origin xyz="0 0.27 0" rpy="0 0 1.57"/>
    <axis xyz="1 0 0"/>
  </joint>

  <!-- Middle Right Traction -->
  <link name="middle_right_wheel">
    <collision><origin xyz="0 0 0" rpy="1.57 0 1.5708"/><geometry><cylinder radius="0.0735" length="0.03"/></geometry></collision>
        <!-- <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual> -->
    <inertial>
      <origin xyz="0 0 0" rpy="-1.57 0 1.5708"/>
      <mass value="1"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>
  <joint name="middle_right_wheel_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="middle_right_wheel"/>
    <origin xyz="0 -0.27 0" rpy="0 0 1.57"/>
    <axis xyz="1 0 0"/>
  </joint>

  <!-- ================= LIDAR ================= -->
  <link name="lidar_link">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"
               ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
    <visual><origin xyz="0 0 0"/><geometry><cylinder radius="0.02" length="0.03"/></geometry></visual>
    <collision><origin xyz="0 0 0"/><geometry><cylinder radius="0.02" length="0.03"/></geometry></collision>
  </link>
  <joint name="lidar_joint" type="fixed">
    <origin xyz="0 0 0.28" rpy="0 0 0"/>
    <parent link="link_base"/>
    <child  link="lidar_link"/>
  </joint>


  <link name="realsense_link">
    <inertial>
      <origin xyz="0 0 0" rpy="1.57 1.57 1.57"/>
      <mass value="0.0615752"/>
      <inertia ixx="9.108e-05" ixy="0" ixz="0" iyy="2.51e-06" iyz="0" izz="8.931e-05"/>
    </inertial>
    <visual name="visual">
      <origin xyz="0 0 0" rpy="0 0 1.57"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/RealSense_D435/meshes/realsense.dae"/>
      </geometry>
    </visual>
    <collision name="collision">
     <origin xyz="0 0 0" rpy="0 0 1.57"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/RealSense_D435/meshes/realsense.dae"/>
      </geometry>
    </collision>
  </link>
  


  <joint name="realsense_joint" type="fixed">
    <origin xyz="0 0.45 0.15" rpy="0 0 1.57"/>
    <parent link="link_base"/>
    <child  link="realsense_link"/>
  </joint>

  <link name="realsense_depth_frame"/>
  <joint name="realsense_depth_frame_joint" type="fixed">
    <origin xyz="0 0 0" rpy="-1.57 0 3.14"/>
    <parent link="realsense_link"/>
    <child  link="realsense_depth_frame"/>
  </joint>

  <link name="realsense_depth_optical_frame"/>
  <joint name="realsense_depth_optical_joint" type="fixed">

    <origin xyz="0 0 0" rpy="-1.57 -1.57 1.57"/>
    <parent link="realsense_depth_frame"/>
    <child  link="realsense_depth_optical_frame"/>
  </joint>

  <gazebo reference="realsense_link">
    <sensor name="realsense_depth_camera" type="depth">
      <always_on>1</always_on>
      <update_rate>30</update_rate>
      <visualize>0</visualize>

      <pose>0 0 0 0 0 0</pose>

      <camera name="depth_camera">
        <horizontal_fov>1.0472</horizontal_fov>
        <image><width>640</width><height>480</height><format>B8G8R8</format></image>
        <clip><near>0.01</near><far>10</far></clip>
      </camera>

      <plugin name="realsense_depth_plugin" filename="libgazebo_ros_camera.so">
        <ros>
          <remapping>image_raw:=/realsense_depth_camera/depth/image_raw</remapping>
          <remapping>camera_info:=/realsense_depth_camera/depth/camera_info</remapping>
          <remapping>points:=/realsense_depth_camera/points</remapping>
        </ros>
        <frame_name>realsense_depth_optical_frame</frame_name>
        <output_pointcloud>true</output_pointcloud>
        <pointCloudCutoff>0.01</pointCloudCutoff>
        <pointCloudCutoffMax>10.0</pointCloudCutoffMax>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo reference="chassis_link"><selfCollide>true</selfCollide><mu1>0.2</mu1><mu2>0.2</mu2></gazebo>
  <gazebo reference="front_left_wheel"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="front_right_wheel"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="back_left_wheel"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="back_right_wheel"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="middle_left_wheel"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="middle_right_wheel"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="lift_link"><mu1>1e6</mu1><mu2>1e5</mu2><kp>1e5</kp><kd>1</kd><maxVel>0.01</maxVel><minDepth>0.001</minDepth></gazebo>


  <gazebo reference="lidar_link">
    <sensor name="amr_lidar" type="ray">
      <always_on>true</always_on>
      <update_rate>15</update_rate>
      <visualize>true</visualize>
      <ray>
        <scan>
          <horizontal>
            <samples>1080</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159265</min_angle>
            <max_angle>3.14159265</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>       <!-- avoid robot self-collision -->
          <max>25.0</max>       <!-- typical outdoor lidar range -->
          <resolution>0.001</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>  <!-- 1 cm noise, realistic -->
        </noise>
      </ray>
      <plugin name="gazebo_ros_ray_sensor" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <parameter name="use_sim_time" value="true"/>
          <remapping>~/out:=/scan</remapping> <!-- topic published -->
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- ================= JOINT STATE PUBLISHER ================= -->
  <gazebo>
    <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <update_rate>100</update_rate>
      <joint_name>middle_left_wheel_joint</joint_name>
      <joint_name>middle_right_wheel_joint</joint_name>
    </plugin>
  </gazebo>

  <!-- ================= DIFF DRIVE ================= -->
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <parameter name="use_sim_time" value="true"/>
        <remapping>cmd_vel:=/cmd_vel</remapping>
        <remapping>odom:=/odom</remapping>
      </ros>
      <update_rate>100</update_rate>
      <left_joint>middle_left_wheel_joint</left_joint>
      <right_joint>middle_right_wheel_joint</right_joint>
      <wheel_diameter>0.146</wheel_diameter>
      <wheel_separation>0.54</wheel_separation>
      <max_wheel_torque>1000</max_wheel_torque>
      <max_wheel_acceleration>0.0</max_wheel_acceleration>

      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
      <odometry_source>0</odometry_source>
    </plugin>
  </gazebo>

</robot>
