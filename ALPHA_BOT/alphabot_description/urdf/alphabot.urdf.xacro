<?xml version="1.0"?>
<robot name="alphabot" xmlns:xacro="http://www.ros.org/wiki/xacro">


  <xacro:arg name="scan_topic" default="/scan"/>
  <xacro:arg name="cmd_vel_topic" default="/amazon_robot/cmd_vel"/>
  <xacro:arg name="odom_topic" default="/amazon_robot/odom"/>
  <xacro:arg name="use_gazebo_camera" default="true"/>


  <link name="base_footprint"/>
  <link name="link_base"/>
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child  link="link_base"/>
    <origin xyz="0 0 0.072" rpy="0 0 0"/>
  </joint>

  <link name="chassis_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1580"/>
      <inertia ixx="1997.86" ixy="0" ixz="0" iyy="442.769" iyz="62.5206" izz="2238.05"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/chassis.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/chassis.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </collision>
  </link>

  <joint name="chassis_link_joint" type="fixed">
    <parent link="link_base"/>
    <child  link="chassis_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>


  <link name="bl_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="24.5"/>
      <inertia ixx="1.84514" ixy="0" ixz="0" iyy="1.04961" iyz="0" izz="1.04961"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.072" length="0.06"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
  </link>
  <joint name="bl_axle" type="continuous">
    <origin xyz="-0.18 -0.244 0" rpy="0 0 0"/>
    <parent link="chassis_link"/>
    <child  link="bl_1"/>
    <axis xyz="1 0 0"/>
    <dynamics friction="12.0316061502"/>
  </joint>

  <link name="br_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="24.5"/>
      <inertia ixx="1.84514" ixy="0" ixz="0" iyy="1.04961" iyz="0" izz="1.04961"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.072" length="0.06"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
  </link>
  <joint name="br_axle" type="continuous">
    <origin xyz="0.18 -0.244 0" rpy="0 0 0"/>
    <parent link="chassis_link"/>
    <child  link="br_1"/>
    <axis xyz="1 0 0"/>
    <dynamics friction="12.0316061502"/>
  </joint>

  <link name="l_steer_1">
    <inertial><origin xyz="0 0 0"/><mass value="1"/><inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/></inertial>
  </link>
  <joint name="l_steer" type="revolute">
    <origin xyz="-0.236 0.244 0" rpy="0 0 0"/>
    <parent link="chassis_link"/>
    <child  link="l_steer_1"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.0" effort="1e9" velocity="0.0"/>
  </joint>

  <link name="r_steer_1">
    <inertial><origin xyz="0 0 0"/><mass value="1"/><inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/></inertial>
  </link>
  <joint name="r_steer" type="revolute">
    <origin xyz="0.236 0.244 0" rpy="0 0 0"/>
    <parent link="chassis_link"/>
    <child  link="r_steer_1"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.0" effort="1e9" velocity="0.0"/>
  </joint>

  <link name="fl_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="24.5"/>
      <inertia ixx="1.84514" ixy="0" ixz="0" iyy="1.04961" iyz="0" izz="1.04961"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.072" length="0.06"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
  </link>
  <joint name="fl_axle" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="l_steer_1"/>
    <child  link="fl_1"/>
    <axis xyz="1 0 0"/>
  </joint>

  <link name="fr_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="24.5"/>
      <inertia ixx="1.84514" ixy="0" ixz="0" iyy="1.04961" iyz="0" izz="1.04961"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.072" length="0.06"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
  </link>
  <joint name="fr_axle" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="r_steer_1"/>
    <child  link="fr_1"/>
    <axis xyz="1 0 0"/>
  </joint>

  <link name="lidar_link">
    <inertial><origin xyz="0 0 0"/><mass value="0.5"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
    <visual><origin xyz="0 0 0"/><geometry><cylinder radius="0.04" length="0.05"/></geometry></visual>
    <collision><origin xyz="0 0 0"/><geometry><cylinder radius="0.04" length="0.05"/></geometry></collision>
  </link>
  <joint name="lidar_joint" type="fixed">
    <origin xyz="0 0 0.18" rpy="0 0 0"/>
    <parent link="link_base"/>
    <child  link="lidar_link"/>
  </joint>

  <link name="lift_link">
    <inertial><origin xyz="0 0 0"/><mass value="0.1"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/platform.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
      <mesh filename="package://alphabot_description/meshes/platform_collision.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </collision>
  </link>
  <joint name="lift_fixed_joint" type="fixed">
    <origin xyz="0 0 0.02" rpy="0 0 0"/>
    <parent link="lidar_link"/>
    <child  link="lift_link"/>
  </joint>

  <link name="realsense_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 1.57"/>
      <mass value="0.0615752"/>
      <inertia ixx="9.108e-05" ixy="0" ixz="0" iyy="2.51e-06" iyz="0" izz="8.931e-05"/>
    </inertial>
    <visual name="visual">
      <origin xyz="0 0 0" rpy="0 0 1.57"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/RealSense_D435/meshes/realsense.dae"/>
      </geometry>
    </visual>
    <collision name="collision">
     <origin xyz="0 0 0" rpy="0 0 1.57"/>
      <geometry>
        <mesh filename="package://alphabot_description/meshes/RealSense_D435/meshes/realsense.dae"/>
      </geometry>
    </collision>
  </link>
  


  <joint name="realsense_joint" type="fixed">
    <origin xyz="0 0.45 0.15" rpy="0 0 1.57"/>
    <parent link="link_base"/>
    <child  link="realsense_link"/>
  </joint>

  <link name="realsense_depth_frame"/>
  <joint name="realsense_depth_frame_joint" type="fixed">
    <origin xyz="0 0 0" rpy="-1.57 0 3.14"/>
    <parent link="realsense_link"/>
    <child  link="realsense_depth_frame"/>
  </joint>

  <link name="realsense_depth_optical_frame"/>
  <joint name="realsense_depth_optical_joint" type="fixed">

    <origin xyz="0 0 0" rpy="-1.57 -1.57 1.57"/>
    <parent link="realsense_depth_frame"/>
    <child  link="realsense_depth_optical_frame"/>
  </joint>

  <gazebo reference="realsense_link">
    <sensor name="realsense_depth_camera" type="depth">
      <always_on>1</always_on>
      <update_rate>30</update_rate>
      <visualize>0</visualize>

      <pose>0 0 0 0 0 0</pose>

      <camera name="depth_camera">
        <horizontal_fov>1.0472</horizontal_fov>
        <image><width>640</width><height>480</height><format>B8G8R8</format></image>
        <clip><near>0.01</near><far>10</far></clip>
      </camera>

      <plugin name="realsense_depth_plugin" filename="libgazebo_ros_camera.so">
        <ros>
          <remapping>image_raw:=/realsense_depth_camera/depth/image_raw</remapping>
          <remapping>camera_info:=/realsense_depth_camera/depth/camera_info</remapping>
          <remapping>points:=/realsense_depth_camera/points</remapping>
        </ros>
        <frame_name>realsense_depth_optical_frame</frame_name>
        <output_pointcloud>true</output_pointcloud>
        <pointCloudCutoff>0.01</pointCloudCutoff>
        <pointCloudCutoffMax>10.0</pointCloudCutoffMax>
      </plugin>
    </sensor>
  </gazebo>

  <gazebo reference="chassis_link"><selfCollide>true</selfCollide><mu1>0.2</mu1><mu2>0.2</mu2></gazebo>
  <gazebo reference="bl_1"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="br_1"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="fl_1"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="fr_1"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="lift_link"><mu1>1e6</mu1><mu2>1e5</mu2><kp>1e5</kp><kd>1</kd><maxVel>0.01</maxVel><minDepth>0.001</minDepth></gazebo>


  <gazebo reference="lidar_link">
    <sensor name="amr_lidar" type="ray">
      <always_on>true</always_on>
      <update_rate>15</update_rate> <!-- 10-15 Hz like real sensors -->
      <visualize>true</visualize>
      <ray>
        <scan>
          <horizontal>
            <samples>1080</samples>        <!-- 0.33Â° per beam -->
            <resolution>1</resolution>
            <min_angle>-3.14159265</min_angle>
            <max_angle>3.14159265</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>       <!-- avoid robot self-collision -->
          <max>25.0</max>       <!-- typical outdoor lidar range -->
          <resolution>0.001</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>  <!-- 1 cm noise, realistic -->
        </noise>
      </ray>
      <plugin name="gazebo_ros_ray_sensor" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <parameter name="use_sim_time" value="true"/>
          <remapping>~/out:=/scan</remapping> <!-- topic published -->
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>



  <gazebo>
    <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <update_rate>100</update_rate>
      <joint_name>bl_axle</joint_name>
      <joint_name>br_axle</joint_name>
      <joint_name>fl_axle</joint_name>
      <joint_name>fr_axle</joint_name>
      <joint_name>l_steer</joint_name>
      <joint_name>r_steer</joint_name>
    </plugin>
  </gazebo>

  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
      <parameter name="use_sim_time" value="true"/>
      <remapping>cmd_vel:=/cmd_vel</remapping>
      <remapping>odom:=/odom</remapping>
      </ros>
      <update_rate>100</update_rate>
      <left_joint>bl_axle</left_joint>
      <right_joint>br_axle</right_joint>
      <wheel_diameter>0.144</wheel_diameter>
      <wheel_separation>0.488</wheel_separation>

      <max_wheel_torque>1000</max_wheel_torque>
      <max_wheel_acceleration>0.0</max_wheel_acceleration>

      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
      <odometry_source>0</odometry_source>
    </plugin>
  </gazebo> 

</robot>
