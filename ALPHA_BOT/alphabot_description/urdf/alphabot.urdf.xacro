<?xml version="1.0"?>
<robot name="alphabot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Resolve the package share to an ABSOLUTE path -->
  <xacro:property name="pkg_share" value="$(find alphabot_description)"/>
  <xacro:property name="use_gazebo_camera" value="true"/>
  <xacro:property name="cmd_vel_topic"     value="/amazon_robot/cmd_vel"/>
  <xacro:property name="odom_topic"        value="/amazon_robot/odom"/>
  <xacro:property name="scan_topic"        value="/scan"/>

  <!-- ================== Frames (TF root) ================== -->
  <link name="base_footprint"/>
  <link name="base_link"/>
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child  link="base_link"/>
    <!-- raise base_link so footprint sits at ground; wheel_radius=0.072 -->
    <origin xyz="0 0 0.072" rpy="0 0 0"/>
  </joint>

  <!-- ================== Chassis ================== -->
  <link name="chassis_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1580"/>
      <!-- (placeholder inertia) -->
      <inertia ixx="1997.86" ixy="0" ixz="0" iyy="442.769" iyz="62.5206" izz="2238.05"/>
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${pkg_share}/meshes/chassis.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${pkg_share}/meshes/chassis.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </collision>
  </link>

  <joint name="chassis_link_joint" type="fixed">
    <parent link="base_link"/>
    <child  link="chassis_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- ================== Wheels ================== -->
  <!-- Shared wheel params: radius=0.072, width=0.06; we orient cyl axis along X (rpy 0 1.5708 0) -->
  <!-- Rear LEFT (drive) -->
  <link name="bl_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="24.5"/>
      <inertia ixx="1.84514" ixy="0" ixz="0" iyy="1.04961" iyz="0" izz="1.04961"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.072" length="0.06"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${pkg_share}/meshes/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
  </link>
  <joint name="bl_axle" type="continuous">
    <origin xyz="-0.18 -0.244 0" rpy="0 0 0"/>
    <parent link="chassis_link"/>
    <child  link="bl_1"/>
    <!-- rotate around X (matches collision orientation) -->
    <axis xyz="1 0 0"/>
    <dynamics friction="12.0316061502"/>
  </joint>

  <!-- Rear RIGHT (drive) -->
  <link name="br_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="24.5"/>
      <inertia ixx="1.84514" ixy="0" ixz="0" iyy="1.04961" iyz="0" izz="1.04961"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.072" length="0.06"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${pkg_share}/meshes/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
  </link>
  <joint name="br_axle" type="continuous">
    <origin xyz="0.18 -0.244 0" rpy="0 0 0"/>
    <parent link="chassis_link"/>
    <child  link="br_1"/>
    <axis xyz="1 0 0"/>
    <dynamics friction="12.0316061502"/>
  </joint>

  <!-- Front locked “steer” carriers (fixed at 0 rad) -->
  <link name="l_steer_1">
    <inertial><origin xyz="0 0 0"/><mass value="1"/><inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/></inertial>
  </link>
  <joint name="l_steer" type="revolute">
    <origin xyz="-0.236 0.244 0" rpy="0 0 0"/>
    <parent link="chassis_link"/>
    <child  link="l_steer_1"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.0" effort="1e9" velocity="0.0"/>
  </joint>

  <link name="r_steer_1">
    <inertial><origin xyz="0 0 0"/><mass value="1"/><inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/></inertial>
  </link>
  <joint name="r_steer" type="revolute">
    <origin xyz="0.236 0.244 0" rpy="0 0 0"/>
    <parent link="chassis_link"/>
    <child  link="r_steer_1"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.0" upper="0.0" effort="1e9" velocity="0.0"/>
  </joint>

  <!-- Front LEFT (idler) -->
  <link name="fl_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="24.5"/>
      <inertia ixx="1.84514" ixy="0" ixz="0" iyy="1.04961" iyz="0" izz="1.04961"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.072" length="0.06"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${pkg_share}/meshes/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
  </link>
  <joint name="fl_axle" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="l_steer_1"/>
    <child  link="fl_1"/>
    <axis xyz="1 0 0"/>
  </joint>

  <!-- Front RIGHT (idler) -->
  <link name="fr_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="24.5"/>
      <inertia ixx="1.84514" ixy="0" ixz="0" iyy="1.04961" iyz="0" izz="1.04961"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <geometry><cylinder radius="0.072" length="0.06"/></geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${pkg_share}/meshes/wheel.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
  </link>
  <joint name="fr_axle" type="continuous">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="r_steer_1"/>
    <child  link="fr_1"/>
    <axis xyz="1 0 0"/>
  </joint>

  <!-- ================== LiDAR & Lift ================== -->
  <link name="lidar_link">
    <inertial><origin xyz="0 0 0"/><mass value="0.5"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
    <visual><origin xyz="0 0 0"/><geometry><cylinder radius="0.04" length="0.05"/></geometry></visual>
    <collision><origin xyz="0 0 0"/><geometry><cylinder radius="0.04" length="0.05"/></geometry></collision>
  </link>
  <joint name="lidar_joint" type="fixed">
    <origin xyz="0 0 0.18" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child  link="lidar_link"/>
  </joint>

  <link name="lift_link">
    <inertial><origin xyz="0 0 0"/><mass value="0.1"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${pkg_share}/meshes/platform.dae" scale="0.5 0.5 0.5"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><box size="0.2805 0.2 0.03"/></geometry>
    </collision>
  </link>
  <joint name="lift_fixed_joint" type="fixed">
    <origin xyz="0 0 0.02" rpy="0 0 0"/>
    <parent link="lidar_link"/>
    <child  link="lift_link"/>
  </joint>

  <!-- ================== Camera frames ================== -->
  <link name="camera_mount_link">
    <inertial><origin xyz="0 0 0"/><mass value="0.1"/><inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/></inertial>
  </link>
  <joint name="camera_mount_joint" type="fixed">
    <origin xyz="0 0.45 0.09" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child  link="camera_mount_link"/>
  </joint>

  <link name="camera_link"/>
  <joint name="camera_joint" type="fixed">
    <parent link="camera_mount_link"/>
    <child  link="camera_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="camera_optical_frame"/>
  <joint name="camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 -1.57079632679 3.14159265359"/>
    <parent link="camera_link"/>
    <child  link="camera_optical_frame"/>
  </joint>

  <!-- ================== Gazebo materials/contacts ================== -->
  <gazebo reference="chassis_link"><selfCollide>true</selfCollide><mu1>0.2</mu1><mu2>0.2</mu2></gazebo>
  <gazebo reference="bl_1"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="br_1"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="fl_1"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="fr_1"><mu1>1e6</mu1><mu2>1e6</mu2></gazebo>
  <gazebo reference="lift_link"><mu1>1e6</mu1><mu2>1e5</mu2><kp>1e5</kp><kd>1</kd><maxVel>0.01</maxVel><minDepth>0.001</minDepth></gazebo>

  <!-- ================== Gazebo: LIDAR ================== -->
  <gazebo reference="lidar_link">
    <sensor name="lidar" type="ray">
      <always_on>true</always_on>
      <update_rate>20</update_rate>
      <visualize>true</visualize>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-3.14159265</min_angle>
            <max_angle>3.14159265</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>
          <max>30.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_ray_sensor" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=$(arg scan_topic)</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- ================== Gazebo: camera (optional) ================== -->
  <xacro:if value="$(arg use_gazebo_camera)">
    <gazebo reference="camera_link">
      <sensor name="sim_camera" type="camera">
        <update_rate>30</update_rate>
        <camera>
          <horizontal_fov>1.39626</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip><near>0.02</near><far>50.0</far></clip>
        </camera>
        <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
          <ros>
            <remapping>image_raw:=/camera/image_raw</remapping>
            <remapping>camera_info:=/camera/camera_info</remapping>
            <frame_name>camera_optical_frame</frame_name>
          </ros>
        </plugin>
      </sensor>
    </gazebo>
  </xacro:if>

  <!-- ================== Gazebo: joint state publisher ================== -->
  <gazebo>
    <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
      <update_rate>50</update_rate>
      <joint_name>bl_axle</joint_name>
      <joint_name>br_axle</joint_name>
      <joint_name>fl_axle</joint_name>
      <joint_name>fr_axle</joint_name>
      <joint_name>l_steer</joint_name>
      <joint_name>r_steer</joint_name>
    </plugin>
  </gazebo>

  <!-- ================== Gazebo: differential drive ================== -->
  <gazebo>
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <remapping>cmd_vel:=$(arg cmd_vel_topic)</remapping>
        <remapping>odom:=$(arg odom_topic)</remapping>
      </ros>
      <update_rate>100</update_rate>

      <left_joint>bl_axle</left_joint>
      <right_joint>br_axle</right_joint>

      <wheel_diameter>0.144</wheel_diameter>
      <wheel_separation>0.488</wheel_separation>

      <max_wheel_torque>1000</max_wheel_torque>
      <max_wheel_acceleration>0.0</max_wheel_acceleration>

      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>

      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_footprint</robot_base_frame>
      <!-- 0 = ENCODER, 1 = WORLD -->
      <odometry_source>0</odometry_source>
    </plugin>
  </gazebo>

</robot>
